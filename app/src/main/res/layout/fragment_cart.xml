                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_collapseMode="pin"
                        app:navigationIcon="@drawable/ic_back"
                        app:titleTextColor="@color/black"
